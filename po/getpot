#!/bin/sh
cd ../cpp && \
xgettext -k__ -k__x -k__n:1,2 -k__nx:1,2 -k__xn:1,2 -kN__ \
	-kfatal -ksimulate -kwarn --from-code=UTF-8 \
	--language='C++' --copyright-holder='Eugene V. Lyubimkin' \
	--package-name='cupt' --msgid-bugs-address="jackyf@debian.org" \
	--output='../po/messages.pot' `find . -type f -name "*.cpp" -or -name "*.tpp" -or -name ".hpp"`

